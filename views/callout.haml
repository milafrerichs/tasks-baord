.bg-white.shadow.sm:rounded-lg
  .px-4.py-5.sm:p-6
    %h3.text-lg.leading-6.font-medium.text-gray-900
      = title
    .mt-2.max-w-xl.text-sm.leading-5.text-gray-500
      %p
        = markdown(text)
    .mt-5
      %a.inline-flex.items-center.justify-center.px-4.py-2.border.border-transparent.font-medium.rounded-md.focus:outline-none.transition.ease-in-out.duration-150.sm:text-sm.sm:leading-5(class="text-#{color}-700 bg-#{color}-100 hover:bg-#{color}-50 focus:border-#{color}-300 focus:shadow-outline-#{color} active:bg-#{color}-200" href="#{link}")
        = link_text


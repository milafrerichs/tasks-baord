.bg-white.shadow.overflow-hidden.sm:rounded-md.mt-8
  .bg-white.px-4.py-5.border-b.border-gray-200.sm:px-6
    .-ml-4.-mt-2.flex.items-center.justify-between.flex-wrap.sm:flex-no-wrap
      .ml-4.mt-2
        %h3.text-lg.leading-6.font-medium.text-gray-900
          = @project.title
      .ml-4.mt-2.flex-shrink-0
        %span.inline-flex.rounded-md.shadow-sm
          %button.relative.inline-flex.items-center.px-4.py-2.border.border-transparent.text-sm.leading-5.font-medium.rounded-md.text-white.bg-blue-600.hover:bg-blue-500.focus:outline-none.focus:shadow-outline-blue.focus:border-blue-700.active:bg-blue-700{:type => "button"}
            New Task

  %svg.mb-4#hill(style="background-color: white")
  :javascript
    addLoadEvent(function() {
      let getProgress = function(d) {
        data = d;
      }
      let chart = new window.hillChart('#hill', getProgress);
      let tasks = #{@tasks.to_json}
      chart.renderDots(tasks, true);
    })
  = haml :tasks, locals: { tasks: @project.tasks }
